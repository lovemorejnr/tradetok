generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  email       String   @unique
  avatarUrl   String?
  plan        String?  // 'Basic' | 'Standard' | 'Premium'
  bannerUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items           Item[]
  comments        Comment[]
  notifications   Notification[]
  sentMessages    Message[]
  writtenReviews  Review[] @relation("WrittenReviews")
  receivedReviews Review[] @relation("ReceivedReviews")
}

model Item {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  imageUrl    String
  images      String[]
  title       String
  description String
  likes       Int      @default(0)
  commentsCount Int    @default(0)
  value       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  comments    Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  itemId    String
  item      Item     @relation(fields: [itemId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  text      String
  createdAt DateTime @default(now())
}

model Notification {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  type          String   // 'like' | 'follow' | 'system' | 'offer'
  text          String
  createdAt     DateTime @default(now())
  isRead        Boolean  @default(false)
  relatedUserId String?
  relatedItemId String?
}

model Message {
  id        String   @id @default(uuid())
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  text      String
  createdAt DateTime @default(now())
  timestamp Float
}

model Review {
  id           String   @id @default(uuid())
  targetUserId String
  targetUser   User     @relation("ReceivedReviews", fields: [targetUserId], references: [id])
  reviewerId   String
  reviewer     User     @relation("WrittenReviews", fields: [reviewerId], references: [id])
  rating       Int
  text         String
  createdAt    DateTime @default(now())
}
